          {
            "name": "SearchTerm",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GetBookResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "BookEndpoint"
        ],
        "summary": "Zaevidovanie novej knihy",
