@model EditViewModel;

@{
    ViewData["Title"] = "Editácia knihy";
}

<div class="container p-2">
    <div class="row p-2">
        <div class="col-12">
            <h1 class="display-5">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row p-2">
        <div class="col-6">
            <form asp-controller="@BookController.NAME" asp-action="@BookController.ACTION_EDIT" method="post">
                <div class="form-group mb-2">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 w-25">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" type="number" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" type="text" class="form-control" />
                </div>

                @if (Model.IsBorrowed)
                {
                    <h3 class="p-2">Zapožičané</h3>
                    <div class="form-group mb-2">
                        <label asp-for="@Model.FirstName" class="control-label"></label>
                        <input asp-for="@Model.FirstName" class="form-control" />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="@Model.LastName" class="control-label"></label>
                        <input asp-for="@Model.LastName" class="form-control" />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2 w-50">
                        <label asp-for="@Model.FromDate" class="control-label"></label>
                        <input asp-for="@Model.FromDate" class="form-control" />
                        <span asp-validation-for="@Model.FromDate" class="text-danger"></span>
                    </div>
                }
                <input asp-for="@Model.IsBorrowed" type="hidden" />

                @if (TempData["msg"] != null)
                {
                    <div class="form-group text-danger">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <a asp-controller="@BookController.NAME" asp-action="@BookController.ACTION_INDEX" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i>&nbsp;&nbsp;Späť
                    </a>
                    <button type="submit" class="btn btn-primary">Uložiť</button>
                </div>
            </form>
        </div>
 
        <div class="col-6">
            <img class="d-block m-auto" src="~/img/book.png" />
        </div>
    </div>
</div>