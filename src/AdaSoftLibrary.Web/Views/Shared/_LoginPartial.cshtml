@using AdaSoftLibrary.Web.Controllers;
@using Microsoft.AspNetCore.Identity;

<ul class="navbar-nav">
    <li class="nav-item">
        @if (!User.Identity?.IsAuthenticated ?? false)
        {
            <a class="nav-link text-dark" 
                asp-area="" 
                asp-controller="@AccessController.NAME" 
                asp-action="@AccessController.ACTION_LOGIN">
                Login
            </a>
        }
        else
        {
            <a class="nav-link text-dark" 
                asp-area="" 
                asp-controller="@AccessController.NAME" 
                asp-action="@AccessController.ACTION_LOGOUT">
                Logout
            </a>
        }
    </li>
</ul>